<resources>

    <!--********** Application Theme **********-->
    <!-- Base application theme. -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <!-- Customize your theme here. -->
        <!--<item name="android:fontFamily">@font/vazir_fd</item>-->
        <!--<item name="fontFamily">@font/vazir_fd</item>-->
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>

    </style>


    <!-- Activities with ActionBar style -->
    <style name="OtherActivitiesTheme" parent="MyMaterialTheme.Base">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <!--**************************************-->


    <style name="defaultBtn">
        <item name="android:textColor">@color/defaultBtnText</item>
        <item name="android:background">@drawable/default_btn_selector</item>
    </style>

    <style name="ProgressWhiteAccent">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
